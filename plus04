package BaekJoon;

import java.util.Scanner;

public class __02__ {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.print("숫자를 입력하세요: ");
        int n = sc.nextInt();

        int sum = n * (n + 1) / 2;

        System.out.println("1부터 " + n + "까지의 합은: " + sum);

        sc.close();
    }
}
